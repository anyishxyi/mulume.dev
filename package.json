{
  "name": "mulume",
  "description": "My personal website",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "build": "ng build --configuration=production",
    "ci": "yarn clean-dist && yarn clean-modules && yarn install --frozen-lockfile",
    "clean-all": "yarn clean-dist && yarn clean-modules && rm yarn.lock",
    "clean-dist": "rm -rf dist",
    "clean-modules": "rm -rf node_modules",
    "dev": "ng serve",
    "dev:vercel": "vercel dev",
    "i18n": "ng extract-i18n --output-path src/locale",
    "pre-commit": "yarn lint && yarn prettier:check && yarn test",
    "prettier": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pxradox/mulume.dev"
  },
  "author": "jeanpaulngalula07@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/pxradox/mulume.dev",
  "dependencies": {
    "@angular/animations": "^17.0.5",
    "@angular/cdk": "^17.0.2",
    "@angular/common": "^17.0.5",
    "@angular/compiler": "^17.0.5",
    "@angular/core": "^17.0.5",
    "@angular/forms": "^17.0.5",
    "@angular/platform-browser": "^17.0.5",
    "@angular/platform-browser-dynamic": "^17.0.5",
    "@angular/router": "^17.0.5",
    "@types/nodemailer": "^6.4.9",
    "@vercel/node": "^3.0.11",
    "global": "^4.4.0",
    "googleapis": "^128.0.0",
    "nodemailer": "^6.9.7",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "vercel": "^32.6.1",
    "zone.js": "^0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.5",
    "@angular-eslint/builder": "17.1.1",
    "@angular-eslint/eslint-plugin": "17.1.1",
    "@angular-eslint/eslint-plugin-template": "17.1.1",
    "@angular-eslint/schematics": "17.1.1",
    "@angular-eslint/template-parser": "17.1.1",
    "@angular/cli": "^17.0.5",
    "@angular/compiler-cli": "^17.0.5",
    "@angular/localize": "^17.0.5",
    "@inrupt/jest-jsdom-polyfills": "^2.5.0",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^13.1.4",
    "prettier": "^3.0.3",
    "prettier-eslint": "^16.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier && yarn lint",
      "pre-push": "yarn test"
    }
  },
  "engines": {
    "node": ">=20.5.0"
  }
}
